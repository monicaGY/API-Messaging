                                                                "name": {
                                                                    "type": "string",
                                                                    "example": "Sebastian Garc√≠a"
                                                                }
                                                            },
                                                            "type": "object"
                                                        }
                                                    },
                                                    "date_created": {
                                                        "type": "string",
